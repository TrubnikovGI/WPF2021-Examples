<ResourceDictionary         
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"         
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--создаем ресурс для использования в другом XAML файле(с корневым элементом ResourceDictionary) -->
    <RadialGradientBrush x:Key="brushRadial">
        <!--ключ для нашего ресурса -->
        <RadialGradientBrush.GradientStops>
            <!--hflbfkmysq градиент от центра до края-->
            <GradientStop Color="Pink" Offset="0" />
            <GradientStop Color="Aqua" Offset="1" />
        </RadialGradientBrush.GradientStops>
        <!-- от розового до цвета морской волны-->
    </RadialGradientBrush>
    <!--здесь содержится всего один ресурс но их может быть множество-->
</ResourceDictionary>